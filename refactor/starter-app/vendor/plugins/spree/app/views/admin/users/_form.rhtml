<table>
  <tr>
    <td>Login: </td>
    <td>
      <%= error_message_on :user, :login%>
      <%= f.text_field :login  %>
    </td>
  </tr>
  <tr>
    <td>Email: </td>
    <td>
      <%= error_message_on :user, :email%>
      <%= f.text_field :email  %>
    </td>
  </tr>
  <tr>
    <td>Password: </td>
    <td>
      <%= error_message_on :user, :password%>
      <%= f.password_field :password  %>
    </td>
  </tr>
  <tr>
    <td>Confirm: </td>
    <td>
      <%= f.password_field :password_confirmation %>
    </td>
  </tr>    
</table>
