<table>
  <tr>
    <td><%= t("Name") %>: </td>
    <td>
      <%=error_message_on :option_type, :name %>
      <%= f.text_field :name %>
    </td>
  </tr>
  <tr>
    <td><%= t("Presentation") %>: </td>
    <td>
      <%=error_message_on :option_type, :presentation %>
      <%= f.text_field :presentation %>
    </td>
  </tr>
</table>
<br/>
<% unless true %>
<div id="option-value-listing">
  <%= render :partial => 'option_values', :locals => {:option_type => @option_type} -%>
</div>
<br/>
<% end %>