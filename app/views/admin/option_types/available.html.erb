<h3><%= t("Available Option Types") %></h3>
<table class="option-types">
  <thead>
    <tr>
      <th>Name</th>
      <th>Presentation</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @available_option_types.each do |ot| %>
    <tr>
      <td><%=ot.name %></td>
      <td><%=ot.presentation %></td>
      <td><%= link_to_remote t("Select"),
	                           :url => {:controller => "admin/option_types/",
	                                    :id => ot,
	                                    :product_id => @product.permalink, 
	                                    :action => "select", 
	                                    :option_type_id =>  ot},
	                           :method => :get,	                           
	                           :update => 'selected-options' %>					
      </td>
    </tr>
    <% end %>
    <% if @available_option_types.empty? %>
    <tr>
      <td colspan="3"><%= :none_available.l %></td>
    </tr>
    <% end %>		
  </tbody>
</table>